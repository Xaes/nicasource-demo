{
    "compilerOptions": {
        "lib": ["es2020"],
        "target": "es2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node", "jest"],
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
