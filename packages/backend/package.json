{
    "name": "@nicasource/backend",
    "packageManager": "yarn@3.5.0",
    "description": "NicaSource backend.",
    "type": "module",
    "authors": [
        "Diego Balmaceda <diego@xaes.dev>"
    ],
    "scripts": {
        "migrate:up": "npx sequelize-cli db:migrate",
        "migrate:undo": "npx sequelize-cli db:migrate:undo",
        "migrate-prod:up": "NODE_ENV=production npx sequelize-cli db:migrate",
        "migrate-prod:undo": "NODE_ENV=production npx sequelize-cli db:migrate:undo",
        "build": "tsc",
        "deploy": "yarn migrate-prod:up && pm2 deploy ecosystem.config.cjs production",
        "dev": "nodemon src/main.ts",
        "lint": "npx eslint --fix ."
    },
    "keywords": [
        "postgres",
        "typescript",
        "express",
        "rest",
        "jest"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Xaes/nicasource-demo.git"
    },
    "bugs": {
        "url": "https://github.com/Xaes/nicasource-demo/issues"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/express-serve-static-core": "^4.17.33",
        "@types/jsonwebtoken": "^9.0.1",
        "@types/node": "^18.15.11",
        "@types/validator": "^13.7.15",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "eslint": "^8.38.0",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "reflect-metadata": "^0.1.13",
        "sequelize-cli": "^6.6.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-async-handler": "^1.2.0",
        "helmet": "^6.1.5",
        "jsonwebtoken": "^9.0.0",
        "pg": "^8.10.0",
        "pg-hstore": "^2.3.4",
        "pm2": "^5.3.0",
        "sequelize": "^6.31.0"
    }
}
